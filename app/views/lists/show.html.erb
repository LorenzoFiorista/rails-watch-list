<% if @list.photo.attached? %>
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url( <%= cl_image_path @list.photo.key %> );">
    <div class="container">
      <h1><%= @list.name %></h1>
    </div>
  </div>
<% else %>
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url( <%= @list.picture %> );">
    <div class="container">
      <h1><%= @list.name %></h1>
    </div>
  </div>
<% end %>

<div class="container">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="card-product">
      <%= image_tag bookmark.movie.poster_url %>
      <div class="card-product-infos">
        <h2><%= bookmark.movie.title %></h2>
        <p><%= bookmark.movie.overview %></p>
        <p><%= bookmark.movie.rating %></p>
        <p><%= bookmark.comment %></p>
        <%= link_to 'delete', bookmark_path(bookmark), method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    </div>
  <% end %>
</div>

<%= link_to 'Add bookmark', new_list_bookmark_path(@list) %>

<%= link_to 'Back', root_path %>
